<style>
    .transaction-list {
        height: calc(100vh - 200px);
        overflow-y: auto;
    }
    .transaction-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #e9ecef;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .transaction-item:hover {
        background: #f8f9fa;
    }
    .transaction-item.active {
        background: #e9ecef;
    }
    .transaction-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
    }
    .transaction-icon i {
        font-size: 20px;
        color: #0d6efd;
    }
    .transaction-info {
        flex: 1;
    }
    .transaction-info h6 {
        margin: 0;
        font-size: 14px;
    }
    .transaction-info p {
        font-size: 12px;
        color: #6c757d;
        margin: 0;
    }
    .transaction-info small {
        font-size: 11px;
    }
    .transaction-amount {
        margin-left: 15px;
        font-weight: 600;
    }
    .payment-method-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        margin-bottom: 10px;
    }
    .payment-icon {
        width: 40px;
        height: 40px;
        object-fit: contain;
        margin-right: 10px;
    }
    .payment-info {
        flex: 1;
    }
    .payment-info h6 {
        margin: 0;
        font-size: 14px;
    }
    .payment-info small {
        font-size: 12px;
    }
    .coupon-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border: 1px dashed #e9ecef;
        border-radius: 8px;
        margin-bottom: 10px;
    }
    .coupon-info {
        flex: 1;
    }
    .coupon-info h6 {
        margin: 0;
        font-size: 14px;
        color: #0d6efd;
    }
    .coupon-info small {
        font-size: 12px;
    }
    .coupon-status {
        margin-left: 10px;
    }
</style>

<script>
    // Mock API để load thêm dữ liệu
    const mockTransactions = [
        {
            id: 4,
            type: 'Thanh toán đơn hàng',
            order: '#DH004',
            time: '17/03/2024 14:20',
            amount: -800.000
        },
        {
            id: 5,
            type: 'Hoàn tiền',
            order: '#HT002',
            time: '16/03/2024 09:45',
            amount: 300.000
        }
    ];

    let currentPage = 1;
    const itemsPerPage = 10;
    let isLoading = false;

    // Hàm tạo HTML cho một transaction item
    function createTransactionItem(transaction) {
        const icon = transaction.type.includes('Thanh toán') ? 'shopping-cart' : 
                    transaction.type.includes('Hoàn tiền') ? 'refresh-cw' : 'gift';
        const amountClass = transaction.amount < 0 ? 'text-danger' : 'text-success';
        
        return `
            <div class="transaction-item">
                <div class="transaction-icon">
                    <i class="feather-${icon}"></i>
                </div>
                <div class="transaction-info">
                    <h6>${transaction.order}</h6>
                    <p class="mb-0">${transaction.type}</p>
                    <small class="text-muted">${transaction.time}</small>
                </div>
                <div class="transaction-amount">
                    <span class="${amountClass}">${transaction.amount < 0 ? '-' : '+'}${Math.abs(transaction.amount).toLocaleString('vi-VN')}đ</span>
                </div>
            </div>
        `;
    }

    // Hàm load thêm dữ liệu
    async function loadMoreTransactions() {
        if (isLoading) return;
        
        isLoading = true;
        document.getElementById('loadingMore').classList.remove('d-none');
        document.getElementById('loadMoreBtn').classList.add('d-none');

        // Giả lập API call
        await new Promise(resolve => setTimeout(resolve, 1000));

        const start = (currentPage - 1) * itemsPerPage;
        const end = start + itemsPerPage;
        const newTransactions = mockTransactions.slice(start, end);

        if (newTransactions.length > 0) {
            const transactionList = document.getElementById('transactionList');
            newTransactions.forEach(transaction => {
                transactionList.insertAdjacentHTML('beforeend', createTransactionItem(transaction));
            });
            currentPage++;
        }

        isLoading = false;
        document.getElementById('loadingMore').classList.add('d-none');
        document.getElementById('loadMoreBtn').classList.remove('d-none');
        
        // Ẩn nút "Tải thêm" nếu không còn dữ liệu
        if (newTransactions.length === 0) {
            document.getElementById('loadMoreBtn').style.display = 'none';
        }
    }

    // Xử lý sự kiện click nút "Tải thêm"
    document.getElementById('loadMoreBtn').onclick = function(){
        loadMoreTransactions();
    };

    // Xử lý click vào transaction item
    document.getElementById('transactionList').addEventListener('click', function(e) {
        const transactionItem = e.target.closest('.transaction-item');
        if (transactionItem) {
            document.querySelectorAll('.transaction-item').forEach(item => {
                item.classList.remove('active');
            });
            transactionItem.classList.add('active');
            // Cập nhật chi tiết giao dịch
            updateTransactionDetail(transactionItem);
        }
    });

    // Hàm cập nhật chi tiết giao dịch
    function updateTransactionDetail(transactionItem) {
        // Lấy thông tin từ transaction item
        const order = transactionItem.querySelector('h6').textContent;
        const type = transactionItem.querySelector('p').textContent;
        const time = transactionItem.querySelector('small').textContent;
        const amount = transactionItem.querySelector('.transaction-amount span').textContent;

        // Cập nhật thông tin trong phần chi tiết
        document.querySelector('.transaction-detail h5').textContent = `Chi Tiết Giao Dịch - ${order}`;
        document.querySelector('.transaction-detail .col-md-6:nth-child(1) p').textContent = order;
        document.querySelector('.transaction-detail .col-md-6:nth-child(2) p').textContent = time;
        document.querySelector('.transaction-detail .col-md-6:nth-child(3) p').textContent = type;
        document.querySelector('.transaction-detail .col-md-6:nth-child(4) p').textContent = amount;
    }
</script> 