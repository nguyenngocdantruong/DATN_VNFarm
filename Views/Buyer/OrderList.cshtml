        <!-- [ Main Content ] start -->
        <div class="main-content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Danh Sách Đơn Hàng</h5>
                            <div class="card-header-action">
                                <div class="card-header-btn">
                                    <div data-bs-toggle="tooltip" title="Làm mới">
                                        <a href="javascript:void(0);" class="avatar-text avatar-xs bg-warning" data-bs-toggle="refresh">
                                            <i class="feather-refresh-cw"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Form tìm kiếm và lọc -->
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Tìm kiếm đơn hàng...">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <select class="form-select">
                                            <option value="">Trạng thái đơn hàng</option>
                                            <option value="pending">Chờ xử lý</option>
                                            <option value="processing">Đang xử lý</option>
                                            <option value="shipping">Đang giao</option>
                                            <option value="completed">Đã giao</option>
                                            <option value="cancelled">Đã hủy</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <select class="form-select">
                                            <option value="">Sắp xếp theo</option>
                                            <option value="newest">Mới nhất</option>
                                            <option value="oldest">Cũ nhất</option>
                                            <option value="price_asc">Giá tăng dần</option>
                                            <option value="price_desc">Giá giảm dần</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-primary w-100">
                                            <i class="feather-search me-2"></i>Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Danh sách đơn hàng -->
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã Đơn</th>
                                            <th>Ngày Đặt</th>
                                            <th>Tổng Tiền</th>
                                            <th>Trạng Thái</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>#DH001</td>
                                            <td>15/03/2024</td>
                                            <td>1.2M</td>
                                            <td><span class="badge bg-warning">Chờ xử lý</span></td>
                                            <td>
                                                <a href="00_buyer_order_detail.html" class="btn btn-sm btn-primary">Chi tiết</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>#DH002</td>
                                            <td>14/03/2024</td>
                                            <td>850K</td>
                                            <td><span class="badge bg-info">Đang giao</span></td>
                                            <td>
                                                <a href="00_buyer_order_detail.html" class="btn btn-sm btn-primary">Chi tiết</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>#DH003</td>
                                            <td>13/03/2024</td>
                                            <td>2.1M</td>
                                            <td><span class="badge bg-success">Đã giao</span></td>
                                            <td>
                                                <a href="00_buyer_order_detail.html" class="btn btn-sm btn-primary">Chi tiết</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>#DH004</td>
                                            <td>12/03/2024</td>
                                            <td>950K</td>
                                            <td><span class="badge bg-danger">Đã hủy</span></td>
                                            <td>
                                                <a href="00_buyer_order_detail.html" class="btn btn-sm btn-primary">Chi tiết</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Phân trang -->
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div class="text-muted">
                                    Hiển thị 1-4 trên 10 đơn hàng
                                </div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-end mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="javascript:void(0);" tabindex="-1">
                                                <i class="feather-chevron-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="javascript:void(0);">1</a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="javascript:void(0);">
                                                <i class="feather-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
    <!-- [ Footer ] start -->
    <footer class="footer">
