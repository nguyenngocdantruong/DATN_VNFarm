@model ShopListViewModel

@{
    Layout = "_LayoutAdmin";
}

<div class="page-content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title">Danh Sách Shop</h4>
                    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#filterModal">
                        <i class="bx bx-filter-alt"></i> Lọc
                    </button>
                </div>
                <div class="card-body">
                    <!-- Thanh tìm kiếm -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên shop, chủ shop, email...">
                                <button class="btn btn-primary" type="button">
                                    <i class="bx bx-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="dropdown d-inline-block">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown">
                                    Sắp xếp theo
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                                    <li><a class="dropdown-item" href="#">Tên shop (A-Z)</a></li>
                                    <li><a class="dropdown-item" href="#">Tên shop (Z-A)</a></li>
                                    <li><a class="dropdown-item" href="#">Trạng thái</a></li>
                                    <li><a class="dropdown-item" href="#">Mới nhất</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead>
                                <tr>
                                    <th>Mã Shop</th>
                                    <th>Tên Shop</th>
                                    <th>Chủ Shop</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Email</th>
                                    <th>Địa Chỉ</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#CH001</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="assets/images/shops/shop-1.jpg" class="rounded-circle me-2" width="40" height="40" alt="shop">
                                            <div>
                                                <h6 class="mb-0">Cửa Hàng Nông Sản Sạch</h6>
                                                <small class="text-muted">nongsansach</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Nguyễn Văn A</td>
                                    <td>0123456789</td>
                                    <td>nongsansach@gmail.com</td>
                                    <td>123 Đường ABC, Quận 1, TP.HCM</td>
                                    <td><span class="badge bg-success">Đang Hoạt Động</span></td>
                                    <td>
                                        <a href="00_layout.html?file=00_shop_detail.html" class="btn btn-sm btn-info">Chi Tiết</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>#CH002</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="assets/images/shops/shop-2.jpg" class="rounded-circle me-2" width="40" height="40" alt="shop">
                                            <div>
                                                <h6 class="mb-0">Nông Sản Việt Nam</h6>
                                                <small class="text-muted">nongsanviet</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Trần Thị B</td>
                                    <td>0987654321</td>
                                    <td>nongsanviet@gmail.com</td>
                                    <td>456 Đường XYZ, Quận 2, TP.HCM</td>
                                    <td><span class="badge bg-warning">Tạm Ngưng</span></td>
                                    <td>
                                        <a href="00_layout.html?file=00_shop_detail.html" class="btn btn-sm btn-info">Chi Tiết</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="text-muted">Hiển thị <span class="fw-semibold">1-10</span> của <span class="fw-semibold">50</span> kết quả</div>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Trước</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Sau</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Lọc -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Lọc Danh Sách Shop</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Trạng Thái</label>
                        <select class="form-select">
                            <option value="">Tất cả</option>
                            <option value="active">Đang Hoạt Động</option>
                            <option value="paused">Tạm Ngưng</option>
                            <option value="blocked">Bị Khóa</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Trạng Thái Xác Thực</label>
                        <select class="form-select">
                            <option value="">Tất cả</option>
                            <option value="verified">Đã xác thực</option>
                            <option value="pending">Đang chờ xác thực</option>
                            <option value="rejected">Đã từ chối</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày Đăng Ký</label>
                        <div class="input-group">
                            <input type="date" class="form-control" placeholder="Từ ngày">
                            <span class="input-group-text">đến</span>
                            <input type="date" class="form-control" placeholder="Đến ngày">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary">Áp Dụng</button>
            </div>
        </div>
    </div>
</div> 